<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:listPreferredItemHeightLarge"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/keyline_1_minus_8"
    android:paddingEnd="@dimen/keyline_1"
    android:paddingStart="@dimen/keyline_1"
    android:paddingTop="@dimen/keyline_1_minus_8">

    <ImageView
        android:id="@+id/entry_icon"
        android:layout_width="@dimen/list_icon_width"
        android:layout_height="@dimen/list_icon_width"
        android:layout_marginEnd="@dimen/keyline_1"
        android:scaleType="fitCenter"
        android:src="@drawable/ic99_blank" />

    <TextView
        android:id="@+id/entry_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceListItem" />

</LinearLayout>